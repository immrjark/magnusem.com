---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/magnusem.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="max-w-3xl mx-auto my-20 sm:max-w-lg">
		<slot />
	</body>
</html>
<style is:global>
	html {
		font-family: 'Ubuntu', system-ui, sans-serif;
		background: #121316;
	}
</style>
